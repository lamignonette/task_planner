{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>My tasks</h1>
            </div>
        </div>

    </div>

    <br>

    {% for entity in entities %}
        <div class="row-3">
            <div class="col-sm-6 col-md-4 text-center">
                <div class="thumbnail">
                    <div class="caption">
                        <div><h3>{{ entity.name }}</h3></div>
                        <p>{{ entity.description }}</p>

                        <p>{% if entity.toBeFinishedAt %}{{ entity.toBeFinishedAt|date('Y-m-d') }}{% endif %}
                            , {{ entity.comments|length }} comments </p>

                        <p><a href="#" class="btn btn-primary" role="button">Done</a> <a href="#"
                                                                                         class="btn btn-default"
                                                                                         role="button">Show</a></p>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}


    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Createdat</th>
            <th>Tobefinishedat</th>
            <th>Comments</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.toBeFinishedAt %}{{ entity.toBeFinishedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comments|length }}</td>
                {% if entity.isCompleted %}
                    <td>done</td>
                {% else %}
                    <td>undone</td>
                {% endif %}
                <td>{{ entity.priority }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                        </li>

                        {% if entity.isCompleted %}

                        {% else %}
                            <li>
                                <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                            <li>
                                <a href="{{ path('task_complete', { 'id': entity.id }) }}">done</a>
                            </li>

                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('category_new') }}">
                Create a new category
            </a>
        </li>
        <li>
            <a href="{{ path('app_main_index') }}">
                Homepage
            </a>
        </li>
    </ul>
{% endblock %}
